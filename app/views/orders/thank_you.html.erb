<div class="container">
<h2>Thanks for your event booking</h2>
<h4>Your booking details</h4>
  <p><strong>Name: </strong><%= @order.user.name %></p>
  <p><strong>Name: </strong><%= @order.user.email %></p>
  <p><strong>Event: </strong><%= @order.tickets.last.ticket_type.event.name %></p>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Ticket type</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <% @order.tickets.each do |t| %>
        <tr>
          <td><%= t.ticket_type.name %></td>
          <td><%= t.quantity %></td>
          <td><%= number_to_currency(t.ticket_type.price, precision: 0, separator: '.', delimiter: '.', unit: '', format: "%n VND") %></td>
        </tr>

    <% end %>

    </tbody>
  </table>
</div>

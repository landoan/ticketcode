<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="header-intro">
  <%= image_tag(asset_path("intro.jpg"), height: "320") %>
</div>

<div class="wrapper-intro">

  <div class="container" id="intro_part">
    <div class="col-md-6">

      <h1>
        <%= image_tag(asset_path("Chat.png"), height: "50") %>
        Code Chat For Life
      </h1>
    </div>
    <div class="col-md-6">
      <ul class="nav nav-tabs" role="tablist" id="welcome_form">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#login_form" role="tab">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#register_form" role="tab">Create an account</a>
        </li>

      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="login_form" role="tabpanel">

          <%= form_tag(login_path, method:'post') do %>
              <fieldset class="form-group">
                <label for="email">Email </label>
                <%= text_field_tag 'email', nil, placeholder:  'Enter email here', class:"form-control" %>
              </fieldset>
              <fieldset class="form-group">
                <label for="password">Password</label>
                <%= password_field_tag 'password', nil, placeholder: 'enter password here', class: 'form-control' %>
              </fieldset>
              <%= submit_tag 'Login', class:'btn btn-primary' %>

          <% end %>
        </div>
        <div class="tab-pane" id="register_form" role="tabpanel">
          <%= form_for(:user, url: register_path, method: :post) do |f| %>
              <fieldset class="form-group">
                <label for="name">Username </label>
                <%= f.text_field 'name', placeholder: 'Enter name here', class:'form-control'  %>
              </fieldset>
              <fieldset class="form-group">
                <label for="email">Email </label>
                <%= f.text_field 'email', placeholder: 'Enter email here', class:'form-control' %>
              </fieldset>
              <fieldset class="form-group">
                <label for="password">Password </label>
                <%= f.password_field 'password',  placeholder: 'Enter your password', class:'form-control'  %>

              </fieldset>
              <fieldset class="form-group">
                <label class="password_confirmation">Re enter your password </label>
                <%= f.password_field 'password_confirmation',  placeholder: 'Re-Enter your password', class:'form-control'  %>
              </fieldset>


              <%= f.submit 'Register', class:'btn btn-success'  %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function(){
    $('#welcome_form a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })
  })
</script>
